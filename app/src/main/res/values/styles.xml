<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BasicTextStyle">
        <item name="android:color">@color/basicText</item>
        <item name="android:textSize">@dimen/basic_font_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Navigation Menu -->
    <style name="NavigationMenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:paddingStart">@dimen/basic_margin</item>
        <item name="android:paddingEnd">@dimen/basic_margin</item>
        <item name="android:layout_marginTop">@dimen/basic_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
</resources>
